<?xml version="1.0"?>
<ruleset name="Custom PMD ruleset for Process Flow Automation"
        xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 http://pmd.sourceforge.net/ruleset_2_0_0.xsd">

    <description>
        Custom PMD ruleset for Process Flow Automation
    </description>

    <exclude-pattern>.*/target/*.*</exclude-pattern>

    <!-- JAVA rules -->

    <rule ref="category/java/bestpractices.xml">
        <exclude name="AvoidReassigningParameters"/>
        <exclude name="UseVarargs"/>
        <exclude name="GuardLogStatement"/>
        <exclude name="SwitchStmtsShouldHaveDefault"/>
        <exclude name="JUnitTestsShouldIncludeAssert"/>
        <exclude name="AccessorMethodGeneration"/>
        <exclude name="JUnitAssertionsShouldIncludeMessage"/>
    </rule>

    <rule ref="category/java/bestpractices.xml/UnusedPrivateField">
        <properties>
            <property name="ignoredAnnotations" value="mockit.Injectable"/>
        </properties>
    </rule>

    <rule ref="category/java/codestyle.xml">
        <exclude name="AtLeastOneConstructor"/>
        <exclude name="MethodArgumentCouldBeFinal"/>
        <exclude name="LocalVariableCouldBeFinal"/>
        <exclude name="OnlyOneReturn"/>
        <exclude name="ConfusingTernary"/>
        <exclude name="CallSuperInConstructor"/>
    </rule>

    <rule ref="category/java/codestyle.xml/ShortVariable">
        <properties>
            <property name="xpath">
                <value>
                    <![CDATA[
                        //VariableDeclaratorId[string-length(@Image) < $minimum]
                            [not(lower-case(@Image)='id')]
                            [not(../../..[self::ForInit])]
                            [not(../../..[self::ForStatement])]
                            [not(../..[self::CatchStatement])]
                            [not(parent::LambdaExpression or ../../..[self::LambdaExpression])]
                    ]]>
                </value>
            </property>
        </properties>
    </rule>

    <rule ref="category/java/design.xml">
        <exclude name="LawOfDemeter"/>
        <exclude name="DataClass"/>
    </rule>

    <rule ref="category/java/documentation.xml">
        <exclude name="CommentRequired"/>
    </rule>

    <rule ref="category/java/errorprone.xml">
        <exclude name="NullAssignment"/>
        <exclude name="SimpleDateFormatNeedsLocale"/>
        <exclude name="NonStaticInitializer"/>
        <exclude name="DataflowAnomalyAnalysis"/>
        <exclude name="BeanMembersShouldSerialize"/>
        <exclude name="MissingSerialVersionUID"/>
    </rule>

    <rule ref="category/java/errorprone.xml/AvoidLiteralsInIfCondition">
        <properties>
            <property name="ignoreMagicNumbers" value="-1,0,1"/>
        </properties>
    </rule>

    <rule ref="category/java/errorprone.xml/EmptyInitializer">
        <properties>
            <property name="xpath">
                <value>
                    <![CDATA[
                        //Initializer/Block[count(*)=0 and not(ancestor::AllocationExpression/ClassOrInterfaceType[@Image='FullVerifications'])]
                    ]]>
                </value>
            </property>
        </properties>
    </rule>

    <rule ref="category/java/multithreading.xml">
        <exclude name="UseConcurrentHashMap"/>
    </rule>

    <rule ref="category/java/performance.xml">
        <exclude name="AvoidInstantiatingObjectsInLoops"/>
        <exclude name="ConsecutiveLiteralAppends"/>
        <exclude name="RedundantFieldInitializer"/>
    </rule>

    <rule ref="category/java/codestyle.xml/MethodNamingConventions">
        <properties>
            <property name="junit4TestPattern" value="[a-z][a-zA-Z0-9]*_[a-z0-9][a-zA-Z0-9]*_[a-z0-9][a-zA-Z0-9]*"/>
        </properties>
    </rule>

</ruleset>